<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
		http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">



    <bean id="france"
          class="country.service.impl.France">
    </bean>

    <bean id="englishWelcomeService"
          class="country.CountryService">
        <constructor-arg ref="england"/>
    </bean>

    <bean id="frenchWelcomeService"
          class="country.CountryService">
        <property name="country" ref="france"/>
    </bean>


    <bean id="spainWelcomeService"
          class="country.CountryService">
        <property name="country" ref="spain"/>
    </bean>

    <bean id="spain" factory-method="getInstance"
          class="country.service.impl.Spain">
    </bean>

    <bean id="england"
          class="country.service.impl.England">
    </bean>
</beans>
